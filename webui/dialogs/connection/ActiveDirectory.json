{
  "form": {
    "fields":[
      {
        "title": "Connection name",
        "placeholder": "Specify connection name",
        "type": "text",
        "field": "name",
        "validation": {
          "required": true,
          "message": "Connection name is a required field",
          "prevent-duplicates": {
            "url": "/api/connections",
            "field": "name",
            "message": "Connection name should be unique"
          }
        }
      },
      {
        "title": "Domain",
        "type": "text",
        "field": "domain",
        "validation": {
          "required": true,
          "message": "Domain name is a required field"
        }
      },
      {
        "title": "Connection scope",
        "placeholder": "Restrict scope if applicable",
        "type": "text",
        "field": "scope"

      },
      {
        "title": "User name",
        "type": "text",
        "field": "username",
        "validation": {
          "required": true,
          "message": "Field should not be empty"
        },
        "tooltip": {
          "content": "User name should not contain domain"
        }
      },
      {
        "title": "Password",
        "type": "password",
        "field": "password"
      },
      {
        "title": "SSL",
        "type": "combobox",
        "field": "sslType",
        "options": {
          "dataTextField": "Name",
          "dataValueField": "Type",
          "dataSource": {
            "data": [
              { "Type": "DoNotUse", "Name": "Do not use security socket layer connections"},
              { "Type": "Use", "Name": "Use security socket layer connections only"},
              { "Type": "UseIfPossible", "Name": "Use security socket layer connections if possible"}
            ]
          }
        }
      },
      {
        "type":"delimiter"
      },
      {
        "title": "Use enviroment preferences",
        "type": "checkbox",
        "field": "usePreferences"
      },
      {
        "type":"group",
        "disabled":"usePreferences !== true",
        "fields":[
          {
            "title": "Domain controller",
            "type": "text",
            "placeholder" : "server name[:389]",
            "field": "domainController"
          },
          {
            "title": "Global catalog",
            "type": "text",
            "placeholder" : "server name[:3268]",
            "field": "gc"
          }
        ]
      },
      {
        "type":"delimiter"
      }
    ]
  },
  "defaults": {
    "sslType" : "DoNotUse",
    "type" : "ActiveDirectory"
  },
  "footer": "/pmui/src/dialogs/connection/test-connection.html",
  "width": "700px"
}
