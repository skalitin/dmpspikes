{
    "form": {
        "fields": [
            {

		"title": "Select backups to unpack",
		"type": "selectedobjects",
		"field": "backup",
		
		"options": {

		    "buttonLabel": "Browse",
		    "dataTextField": "when",
		    "dataValueField": "_id",

                    "dataSource": {
                        "serverSorting": true,
                        "sort": {
                            "field": "title",
                            "dir": "desc"
                        }
                    },

                    "url": "/api/backups",

		    "columns": [
			{
			    "title": "Created",
			    "field": "when",
                            "template": "<nobr>#: Sprint.humanize(when + 'Z', 'CalendarDate') #</nobr>",
                            "sortable": true
			},
			{
			    "title": "Users",
			    "field": "users"
			}
		    ]
		}
            }
        ]
    },

    "title": "Backup Unpacking",

    "defaults": {
      "name": "Backup Unpacking",
      "status": "New",
      "type": "Discover",
      "runTask": "now"
    },

    "width": "700px"
}
