{

    "form": {
        "fields": [
            {
                "title": "Task name",
                "type": "text",
                "field": "name",
                "validation": {
                    "required": true,
                    "prevent-duplicates": {
                      "url": "/api/tasks",
                      "field": "name",
                      "message": "Task name should be unique"
                    }
                }
            },
            {
                "title": "Select connection",
                "type": "combobox",
                "field": "sourceConnectionId",
                "options": {
                    "placeholder": "Select connection",
                    "dataTextField": "name",
                    "dataValueField": "_id",
                    "dataSource": {
                      "type": "dmp",
                      "transport": {
                        "read": "/api/connections"
                      },
                      "filter": {
                        "field": "isSource",
                        "value": true
                      }
                    },
                    "width": 200
                }
            },
            {
                "title": "Run task",
                "type": "combobox",
                "field": "runTask",
                "options": {
                  "dataTextField": "name",
                  "dataValueField": "_id",
                  "dataSource": {
                    "type": "dmp",
                    "data": [
                      {"_id": "later", "name": "Manually"},
                      {"_id": "now", "name": "Now"}, 
                      {"_id": "schedule", "name": "On Schedule"}
                    ]
                  }
                }
            },
            {
              "type": "schedule",
              "field": "schedule",
              "title": "Schedule",
              "hidden": "runTask !== 'schedule'"
            }
        ]
    },

    "title": "New Discovery Task",

    "defaults": {

      "name": "Discovery Task",
      "status": "New",
      "type": "Discover",
      "runTask": "now"
    },

    "width": "700px"
}
